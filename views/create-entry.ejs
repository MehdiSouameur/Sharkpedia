<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="css/bootstrap-5/bootstrap.css" rel="stylesheet" />
    <link href="css/styles.css" rel="stylesheet" />

    <title>Home</title>
</head>
<body>
    <div>
        <%- include("partials/navbar") %>
    </div>

    <main>

        <div class="create-structure">
            
            <h4 class="mb-3">Shark Information</h4>
                <div class="row mb-3">
                    <div class="col-4">
                        <label for="firstName" class="form-label">Shark Name</label>
                        <input type="text" class="form-control" id="firstName" placeholder="" value="" required="">
                    </div>
                    <div class="col-4">
                        <label for="firstName" class="form-label">Scientific Name</label>
                        <input type="text" class="form-control" id="firstName" placeholder="" value="" required="">
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-12">
                        <label for="firstName" class="form-label">Content</label>
                        <textarea class="form-control" id="textAreaExample" rows="5" placeholder="Enter your content here" required></textarea>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-12">
                        <label for="imageInput" class="form-label">Choose an image</label>
                        <input type="file" class="form-control" id="imageInput" accept="image/*">
                    </div>
                </div>

                
                <div class="row mb-3">
                    <div class="col-12 d-flex justify-content-center">
                        <div class="mb-3">
                            <button class="btn btn-primary" onclick="previewImage()">Add Image</button>
                        </div>
                    </div>
                </div>

                <div id="imagePreview" class="mt-3">
                    <!-- Image preview will be displayed here -->
                </div>

                <div class="d-flex justify-content-center align-items-center">
                    <button class="btn btn-primary w-50" onclick="">Create Entry</button>
                </div>
        </div>

        <div>
            <%- include("partials/footer") %>
        </div>

    </main>

    <!-- Script for image accepting -->
    <script>
        function previewImage() {
            const fileInput = document.getElementById('imageInput');
            const imagePreview = document.getElementById('imagePreview');
            
            // Clear previous preview
            imagePreview.innerHTML = '';

            if (fileInput.files && fileInput.files[0]) {
                const file = fileInput.files[0];
                const reader = new FileReader();

                reader.onload = function (e) {
                    const img = document.createElement('img');
                    img.src = e.target.result;
                    img.classList.add('img-fluid', 'mt-3');
                    imagePreview.appendChild(img);
                };

                reader.readAsDataURL(file);
            }
        }
    </script>

</body>
</html>