<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="css/bootstrap-5/bootstrap.css" rel="stylesheet" />
    <link href="css/styles.css" rel="stylesheet" />
    <link rel="stylesheet" href="css/multiverse/main.css" />
    <noscript><link rel="stylesheet" href="css/multiverse/noscript.css" /></noscript>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <title>Home</title>
</head>

<body>
    <main>
        <div>
            <%- include("partials/navbar") %>
        </div>
        <div class="push">
            <div id="main">

                <% sharks.forEach(shark => { %>
                    <article class="thumb">
                        <a href= <%= shark.shark_image_url %>   class="image">
                            <img src=<%= shark.shark_image_url %> alt="" />
                        </a>
                        <h2><%= shark.shark_name %></h2>
                        <p><%= shark.science_name %></p>
                        <a href="/article/<%= shark.shark_name.replace(/\s+/g, '_') %>" class="d-flex justify-content-center align-items-center"  style="font-size: 1rem;">READ MORE</a>
                    </article>
                <%  }); %>
                    
            </div>

        </div>
        
        <div>
            <%- include("partials/footer") %>
        </div>

    </main>

    <!-- Scripts -->
    <script src="js/multiverse/jquery.min.js"></script>
    <script src="js/multiverse/jquery.poptrox.min.js"></script>
    <script src="js/multiverse/browser.min.js"></script>
    <script src="js/multiverse/breakpoints.min.js"></script>
    <script src="js/multiverse/util.js"></script>
    <script src="js/multiverse/main.js"></script>
</body>
</html>